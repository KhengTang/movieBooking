    "nodejs-dashboard": "^0.3.0",
    "should": "^11.1.2",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0",
    "supertest": "^2.0.1"
  },
  "dependencies": {
    "awilix": "^2.2.2",
    "body-parser": "^1.16.0",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "helmet": "^3.4.0",
    "http-status": "^0.2.5",
    "joi": "^10.2.0",
    "mongodb": "^4.5.0",
